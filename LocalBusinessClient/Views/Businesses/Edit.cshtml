@{
  Layout = "_Layout";
}
@model LocalBusinessClient.Models.Business;

<h1>Edit @Model.Name</h1>
<div class="card">
  @using(Html.BeginForm())
  {
    @Html.HiddenFor(model => model.BusinessId)
    @Html.LabelFor(model => model.Name)
    <br>
    @Html.EditorFor(model => model.Name, new{htmlAttributes = new{@class="form-control", @required="required"}})
    <br>
    @Html.LabelFor(model => model.Type)
    <br>
    @Html.EditorFor(model => model.Type, new{htmlAttributes = new{@class="form-control", @required="required"}})
    <br>
    @Html.LabelFor(model => model.Genre)
    <br>
    @Html.EditorFor(model => model.Genre, new{htmlAttributes = new{@class="form-control", @required="required"}})
    <br>
    @Html.LabelFor(model => model.Address)
    <br>
    @Html.EditorFor(model => model.Address, new{htmlAttributes = new{@class="form-control", @required="required"}})
    <br>
    @Html.LabelFor(model => model.Price)
    <br>
    @Html.EditorFor(model => model.Price , new{htmlAttributes = new{@class="form-control", @type="number", @min=1, @max=5}, @required="required"})
    <br>
    @Html.LabelFor(model => model.Description)
    <br>
    @Html.EditorFor(model => model.Description, new{htmlAttributes = new{@class="form-control", @required="required"}})
    <br>
    <input type="submit" value="Save" />
  }
</div>
<br>
@Html.ActionLink("Return to Business Details", "Details", new{ id = @Model.BusinessId}, new{@class="btn btn-outline-secondary"})