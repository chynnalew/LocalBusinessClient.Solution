@{
  Layout = "_Layout";
}

@model LocalBusinessClient.Models.Business;

<h1>Add a new Business</h1>
<div class="card">
  @using(Html.BeginForm())
  {
    @Html.LabelFor(model => model.Name)
    <br>
    @Html.TextBoxFor(model => model.Name,  new{@class="form-control", @required="required"})
    <br>
    @Html.LabelFor(model => model.Type)
    <br>
    @Html.TextBoxFor(model => model.Type, new{@class="form-control", @required="required"})
    <br>
    @Html.LabelFor(model => model.Genre)
    <br>
    @Html.TextBoxFor(model => model.Genre, new{@class="form-control", @required="required"})
    <br>
    @Html.LabelFor(model => model.Address)
    <br>
    @Html.TextBoxFor(model => model.Address,  new{@class="form-control", @required="required"})
    <br>
    @Html.LabelFor(model => model.Price)
    <br>
    @Html.TextBoxFor(model => model.Price , new{@class="form-control", @type="number", @min=1, @max=5, @required="required"})
    <br>
    @Html.LabelFor(model => model.Description)
    <br>
    @Html.TextBoxFor(model => model.Description, new{@class="form-control", @required="required"})
    <br>
    <input type="submit" value="Add Business" />
  }
</div>