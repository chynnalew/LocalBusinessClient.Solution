@{
  Layout = "_Layout";
}

@model LocalBusinessClient.Models.Business;

<h1>Search</h1>
<div class="card">
  @using(Html.BeginForm("SearchResults", "Businesses", FormMethod.Post))
  {
    @Html.LabelFor(model => model.Name)
    <br>
    @Html.TextBoxFor(model => model.Name,  new{@class="form-control"})
    <br>
    @Html.LabelFor(model => model.Type)
    <br>
    @Html.TextBoxFor(model => model.Type, new{@class="form-control"})
    <br>
    @Html.LabelFor(model => model.Genre)
    <br>
    @Html.TextBoxFor(model => model.Genre, new{@class="form-control"})
    <br>
    @Html.LabelFor(model => model.Price)
    <br>
    @Html.TextBoxFor(model => model.Price , new{@class="form-control", @type="number", @min=1, @max=5})
    <br>
    <input type="submit" value="Search" />
  }
</div>